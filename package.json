{
  "name": "@inplayer-org/inplayer-ui",
  "version": "2.0.0-beta.7",
  "author": "InPlayer",
  "description": "InPlayer React UI Components",
  "main": "build/bundle.min.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "directories": {
    "src": "src"
  },
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "webpack",
    "build:watch": "webpack --watch --progress",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint ./src --ext .js",
    "lint:js:watch": "esw -w src/**",
    "lint:js:fix": "eslint src/** --fix",
    "prepublishOnly": "yarn build",
    "review": "run-s lint test:clean test test:coverage:report",
    "lint:style": "stylelint -- \"./src/**/*.js\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest src/**; exit 0",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest src/** --watch",
    "test:watchAll": "jest src/** --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html",
    "test:update:snapshots": "jest src/** --updateSnapshot",
    "flow": "flow",
    "flow:watch": "flow-watch",
    "generate:docs": "yarn styleguide:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inplayer-org/inplayer-ui"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inplayer-org/inplayer-ui/issues"
  },
  "homepage": "https://github.com/inplayer-org/inplayer-ui#readme",
  "jest": {
    "testMatch": [
      "**/tests/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/src/index.d.ts"
    ],
    "collectCoverage": true,
    "moduleNameMapper": {
      "^components(.*)$": "<rootDir>/src/components$1",
      "^elements(.*)$": "<rootDir>/src/elements$1",
      "^blocks(.*)$": "<rootDir>/src/blocks$1",
      "^modifiers(.*)$": "<rootDir>/src/modifiers$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^helpers(.*)$": "<rootDir>/tests/helpers$1",
      "^config(.*)$": "<rootDir>/config$1"
    },
    "collectCoverageFrom": [
      "src/**",
      "!src/**/*.snap",
      "!src/blocks/index.js",
      "!src/blocks/Grid/index.js",
      "!src/components/index.js",
      "!src/utils/**",
      "!src/elements/index.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFiles": [
      "raf/polyfill",
      "./tests/config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "peerDependencies": {
    "moment": "^2.24.0",
    "polished": "^3.4.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-fontawesome": "^1.6.1",
    "styled-components": "^4.4.0",
    "styled-components-modifiers": "^1.2.5",
    "styled-tools": "^1.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-syntax-class-properties": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.6.3",
    "@types/styled-components": "^4.1.20",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-webpack-alias": "^2.1.2",
    "copy-webpack-plugin": "^5.0.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-watch": "^6.0.1",
    "flow-bin": "^0.110.1",
    "flow-typed": "^2.6.2",
    "flow-watch": "^1.1.4",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "polished": "^3.4.1",
    "prettier": "^1.18.2",
    "prettierrc": "^0.0.0-5",
    "raf": "^3.4.1",
    "rc-progress": "^2.5.2",
    "react": "^16.11.0",
    "react-addons-shallow-compare": "^15.6.2",
    "react-dates": "^21.3.1",
    "react-dom": "^16.11.0",
    "react-fontawesome": "^1.6.1",
    "react-paginate": "^6.3.0",
    "react-styleguidist": "^8.0.6",
    "react-test-renderer": "^16.11.0",
    "react-toggle": "^4.1.1",
    "rimraf": "^3.0.0",
    "styled-components": "^4.4.0",
    "styled-components-modifiers": "^1.2.5",
    "styled-tools": "^1.7.1",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "terser-webpack-plugin": "^2.2.1",
    "url-loader": "^2.2.0",
    "webfontloader": "^1.6.28",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
